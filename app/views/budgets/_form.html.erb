<%= simple_form_for @budget, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :task %>
  <%= f.input :amount %>
  <%= f.input :description %>
  <%= f.input :status %>
  <%= f.input :receiptno %>
  <%= f.input :project_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                budgets_path, :class => 'btn' %>
  </div>
<% end %>
