<%= simple_form_for @progress, :html => { :class => 'form-horizontal' } do |f| %>

 
    <%= f.input :project_id,label: 'Grant Name'  %>
    <%= f.input :milestone %>
    <%= f.input :post %>
    <%= f.input :status %>
    <%= f.input :date %>
    <%= f.input :user_id %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                progresses_path, :class => 'btn' %>
  </div>
<% end %>
